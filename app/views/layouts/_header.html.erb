<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "Fake Bank of Southern Utah", root_path, id: "logo" %>
			<nav>
				<ul class="nav pull-right">

					<% if signed_in? %>
						<% if current_user.admin? %>
							<li><%= link_to "New User", signup_path %></li>
							<li><%= link_to "View Users", index_path %></li>
						<% else %>
							<li><%= link_to "Accounts", user_path(current_user) %></li>
						<% end %>
						<li><%= link_to "Profile", edit_user_path(current_user) %></li>
						<li><%= link_to "Sign Out", signout_path, method: 'delete' %></li>
					<% else %>
						<li><%= link_to "Home", root_path %></li>
						<li><%= link_to "Sign in", signin_path %></li>
					<% end %>

				</ul>
			</nav>
		</div>
	</div>
</header>